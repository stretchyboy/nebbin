---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    
    {# After the the content defined in index.md, list the blog posts in the collection #}
    {% if collections.posts.length %}
      <ul>
        {%- for post in collections.posts -%}
          <li{% if page.url == post.url %} aria-current="page"{% endif %}>
            {{ post.data.page.date | htmlDateString }} — <a href='{{ post.url }}'>{{ post.data.title }}</a></li>
        {%- endfor -%}
        <li><a href="/posts">View all posts</a></li>
      </ul>
    {% endif %}
    
    {% if collections.plans.length %}
      <h3>
         Plans
      </h3>
      <ul>
        {%- for post in collections.plans -%}
          <li{% if page.url == post.url %} aria-current="page"{% endif %}>
            {{ post.data.page.date | htmlDateString }} — <a href='{{ post.url }}'>{{ post.data.title }}</a></li>
        {%- endfor -%}
      </ul>
    {% endif %}
  </div>
</div>